{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "dependencyDashboard": false,
  "gitIgnoredAuthors": [
    "githubaction@githubaction.com"
  ],
  "rebaseWhen": "never",
  "ignorePaths": [],
  "packageRules": [
    {
      "packageNames": [
        "docker-compose"
      ],
      "automerge": true
    },
    {
      "matchPackagePatterns": [
        "homarr"
      ],
      "matchDatasources": [
        "docker"
      ],
      "enabled": true,
      "automerge": true
    }
  ],
  "prCreation": "immediate"
}
