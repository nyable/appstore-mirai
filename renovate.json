{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboard": false,
  "gitIgnoredAuthors": [
    "githubaction@githubaction.com"
  ],
  "rebaseWhen": "never",
  "ignorePaths": [],
  "packageRules": [
    {
      "description": "默认禁用所有 Docker 镜像更新",
      "matchDatasources": [
        "docker"
      ],
      "enabled": false
    },
    {
      "description": "白名单：只更新以下软件",
      "matchPackageNames": [
        "homarr"
      ],
      "matchDatasources": [
        "docker"
      ],
      "enabled": true,
      "automerge": true
    }
  ],
  "prCreation": "immediate"
}